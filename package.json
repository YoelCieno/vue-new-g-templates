{
  "name": "new-vue-file",
  "displayName": "New Vue File",
  "description": "快速创建VUE组件",
  "version": "0.0.4",
  "publisher": "wtto00",
  "repository": "https://github.com/wtto00/new-vue-file",
  "engines": {
    "vscode": "^1.56.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:vue",
    "onCommand:new-vue-file.newVueFile"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "new-vue-file.newVueFile",
        "title": "创建Vue组件",
        "category": "Vue"
      },
      {
        "command": "new-vue-file.newVueFileWithoutFolder",
        "title": "创建Vue组件(无目录)",
        "category": "Vue"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "new-vue-file.newVueFile",
          "group": "1_modification",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "new-vue-file.newVueFileWithoutFolder",
          "group": "1_modification",
          "when": "explorerResourceIsFolder"
        }
      ]
    },
    "configuration": [
      {
        "type": "object",
        "title": "New Vue File设置",
        "properties": {
          "newVueFile.vue3": {
            "type": "boolean",
            "default": true,
            "markdownDescription": "是否使用Vue3版本"
          },
          "newVueFile.ts": {
            "type": "boolean",
            "default": false,
            "markdownDescription": "是否使用typescript"
          },
          "newVueFile.separateScript": {
            "type": "boolean",
            "default": false,
            "markdownDescription": "script文件是否单独分离"
          },
          "newVueFile.style": {
            "type": "string",
            "default": "css",
            "enum": [
              "css",
              "scss",
              "less",
              "stylus"
            ],
            "markdownDescription": "选择css预处理语言"
          },
          "newVueFile.separateStyle": {
            "type": "boolean",
            "default": false,
            "markdownDescription": "style文件是否单独分离"
          },
          "newVueFile.scopedStyle": {
            "type": "boolean",
            "default": true,
            "markdownDescription": "style样式隔离"
          },
          "newVueFile.scrpitSetup": {
            "type": "boolean",
            "default": false,
            "markdownDescription": "是否使用script setup模式"
          },
          "newVueFile.folder": {
            "type": "boolean",
            "default": true,
            "markdownDescription": "是否创建同名目录"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.56.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "eslint": "^7.19.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  }
}
